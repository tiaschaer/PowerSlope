    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listen"
        android:id="@+id/but_startListening" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/statusBarDefault"
        android:id="@+id/tw_statusBar" />

</LinearLayout>