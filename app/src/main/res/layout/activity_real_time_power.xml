<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/gpsRawData"
        android:layout_marginBottom="10dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/lay_table">

        <TableRow>
            <TextView android:text="@string/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:id="@+id/l_time"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:width="150dp"
                android:id="@+id/tw_time"
                android:gravity="end" />
<!--            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="" />-->
        </TableRow>
        <TableRow>
            <TextView android:text="@string/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:id="@+id/l_latitude"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:width="150dp"
                android:id="@+id/tw_latitude"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_degrees" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:id="@+id/l_longitude"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_longitude"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_degrees" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:id="@+id/l_accuracy"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_accuracy"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_meters" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/altitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:id="@+id/l_altitude"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_altitude"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_meters" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:id="@+id/l_speed"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_speed"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_metersPerSecond" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/computedData"
        android:layout_marginBottom="10dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TableRow>
            <TextView android:text="@string/intervalPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:width="150dp"
                android:id="@+id/tw_intervalPoint1"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_seconds" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/distancePoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:width="150dp"
                android:id="@+id/tw_distancePoint1"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_meters" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:width="150dp"
                android:id="@+id/tw_distancePoint1_error"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_meters" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/altitudeDifferencePoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_altitudeDifferencePoint1"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_meters" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_altitudeDifferencePoint1_error"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_meters" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/slopePoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_slopePoint1"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_percent" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_slopePoint1_error"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_percent" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/speedPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_speedPoint1"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_kilometersPerHour" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_speedPoint1_error"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_kilometersPerHour" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/powerPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
                android:id="@+id/tw_powerPoint1"
                android:gravity="end" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/units_watts" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:paddingEnd="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notRequested"
